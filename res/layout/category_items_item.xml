<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:paddingBottom="3dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="3dp" >

    <RelativeLayout
        android:id="@+id/category_item_items_relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/category_list_view_button"
        android:gravity="right" >

        <TextView
            android:id="@+id/category_item_items_textview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginBottom="0dp"
            android:lineSpacingExtra="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="5dp"
            android:textColor="#111111" />

        <ToggleButton
            android:id="@+id/toggle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignRight="@+id/category_item_items_textview"
            android:layout_below="@+id/category_item_items_textview"
            android:layout_centerVertical="true"
            android:background="@drawable/like_toggle"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textOff=""
            android:textOn="" />

        <TextView
            android:id="@+id/new_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_item_items_textview"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/toggle"
            android:text="@string/new_string"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>